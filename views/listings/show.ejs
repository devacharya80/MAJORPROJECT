<% layout("/layouts/boilerplate.ejs") %>

<!-- Main container row -->
<div class="row mt-3">

    <!-- Title section -->
    <div class="col-8 offset-3 ">
        <h3><%= listing.title %></h3>
    </div>

    <!-- Listing card -->
    <div class="card col-6 offset-3 show-card listing-card">

        <!-- Listing image -->
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">

        <div class="card-body">

            <!-- Owner of the listing -->
            <p class="card-text"><i>Owned by : <%= listing.owner.username %></i></p>

            <!-- Description -->
            <p class="card-text"><%= listing.description %> <br></p>

            <!-- Price -->
            <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> <br></p>

            <!-- Location -->
            <%= listing.location %> <br></p>

            <!-- Country -->
            <p class="card-text"><%= listing.country %></p>
        </div>
    </div>
</div>

<!-- Edit/Delete buttons (always visible now) -->
 <%if(currUser&&listing.owner._id.equals(currUser._id)){%>
<div class="btns">

    <!-- Edit button -->
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>

    <!-- Delete button -->
    <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">DELETE</button>
    </form>

</div>
<%}%>

<!-- Divider -->
<hr class="col-7 offset-3 ">

<!-- Review Section -->
<div class="col-8 offset-3 mt-3 mb-3">
<%if(currUser) {%>
    <h4>Leave a Review</h4>

    <!-- Review form -->
    <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

        <!-- Rating -->
        <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <input name="review[rating]" id="rating" type="range" min="1" max="5" class="form-range">
        </div>

        <!-- Comment -->
        <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please review</div>
        </div>

        <!-- Submit review button -->
        <button class="btn btn-outline-dark">Submit</button>
    </form>
    <%}%>


    <!-- Display all reviews -->
    <p><b>All Reviews</b></p>
    <div class="row">

        <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3">
                <div class="card-body">

                    <!-- Reviewer name (hardcoded for now) -->
                    <h5 class="card-title">@<%=review.author.username%></h5>

                    <!-- Review text -->
                    <p class="card-text"><%= review.comment %></p>

                    <!-- Rating -->
                    <p class="card-text"><%= review.rating %> stars</p>

                    <!-- Delete review button -->
                    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>

    </div>
</div>
